{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; base-uri 'self'; frame-ancestors 'none'; form-action 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://plumprush.com https://*.plumprush.com https://va.vercel-scripts.com; connect-src 'self' https://jdianavibwqbxgjkzniq.supabase.co https://va.vercel-scripts.com; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:;" }
      ]
    }
  ],
  "redirects": [
    { "source": "/admin/:path*",       "destination": "/", "permanent": false },
    { "source": "/api/:path*",         "destination": "/", "permanent": false },
    { "source": "/dl-data/:path*",     "destination": "/", "permanent": false },
    { "source": "/errors/:path*",      "destination": "/", "permanent": false },
    { "source": "/kit-page/:path*",    "destination": "/", "permanent": false },
    { "source": "/search-page/:path*", "destination": "/", "permanent": false },
    { "source": "/submit-page/:path*", "destination": "/", "permanent": false },
    { "source": "/306392b042.php",              "destination": "/", "permanent": false },
    { "source": "/16b45b3064a1e27249d0.txt",    "destination": "/", "permanent": false },
    { "source": "/supabase-config.js",          "destination": "/", "permanent": false } 
  ],
  "rewrites": [
    { "source": "/submit", "destination": "/submit-page/index.html" },
    { "source": "/search", "destination": "/search-page/index.html" },
    { "source": "/:slug",  "destination": "/kit-page/index.html" }
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}

